{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/wallet",
        "destination": "/wallet.html"
      },
      {
        "source": "/ordinals",
        "destination": "/ordinals.html"
      },
      {
        "source": "/inscribe",
        "destination": "/inscribe.html"
      },
      {
        "source": "/preview",
        "destination": "/preview.html"
      },
      {
        "source": "/tx/**",
        "destination": "/tx/[outpoint].html"
      },
      {
        "source": "/inscription/**",
        "destination": "/inscription/[inscriptionId].html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}