{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/payment/send",
        "function": "send"
      },
      {
        "source": "/api/ordinal/send",
        "function": "transfer"
      },
      {
        "source": "/api/inscribe",
        "function": "inscribe"
      },
      {
        "source": "/api/broadcast",
        "function": "broadcast"
      },
      {
        "source": "/wallet",
        "destination": "/wallet.html"
      },
      {
        "source": "/ordinals",
        "destination": "/ordinals.html"
      },
      {
        "source": "/inscribe",
        "destination": "/inscribe.html"
      },
      {
        "source": "/preview",
        "destination": "/preview.html"
      },
      {
        "source": "/tx/**",
        "destination": "/tx/[outpoint].html"
      },
      {
        "source": "/inscription/**",
        "destination": "/inscription/[inscriptionId].html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}